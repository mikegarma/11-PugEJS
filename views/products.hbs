<h2>My Products</h2>
{{#if foundProducts}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Price</th>
                <th>Icon</th>
            </tr>
        </thead>
        <tbody>
                {{#each products}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td><img src={{this.thumbnail}} width="25" height="25"></td>
                    </tr>
                {{/each}}
            
        </tbody>
    </table>
{{else}}
    <div>
        <span class="bg-warning text-dark">No hay productos en la lista.</span>
    </div>
{{/if}}

