
doctype html
html
  head
    include partials/head
    link(rel='stylesheet' href='public/css/style.css')
  body
    include partials/header
    div.container(style='padding-top: 1em;')
      h2 Create New Product:
      form#product-form(action='/api/products' method='post')
        .mb-3
          label.form-label(for='title') Name: 
          input#title.form-control(name='title' aria-describedby='title')

        .mb-3
          label.form-label(for='price') Price: 
          input#price.form-control(name='price' aria-describedby='price')

        .mb-3
          label.form-label(for='thumbnail') Thumbnail: 
          input#thumbnail.form-control(name='thumbnail' aria-describedby='thumbnail')
          #thumbnailHelp.form-text Url of the icon
        button#submit.btn.btn-primary(type='submit' name='submit') Submit
      br
      br
      include partials/products
      br
      br
      include partials/chat

    script(src="/socket.io/socket.io.js")
    script(src="/public/js/main.js")